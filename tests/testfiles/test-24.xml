<test title="Drop a function">
<before>
    <schema>
        <function name="myfunc" arguments="subtotal float" returns="float">
BEGIN
    RETURN subtotal * 0.06;
END;
        </function>
    </schema>
</before>
<after>
    <schema>
    </schema>
</after>
<ddls dbms="postgres">
    <ddl>DROP FUNCTION myfunc(float)</ddl>
</ddls>
<ddls dbms="mysql">
    <ddl>DROP FUNCTION myfunc</ddl>
</ddls>
<ddls dbms="firebird">
    <ddl>DROP PROCEDURE myfunc</ddl>
</ddls>
</test>
