<test title="Change a function">
<before>
    <schema>
        <function name="myfunc" arguments="subtotal float" returns="float" dbms="postgres,mysql,oracle">
BEGIN
    RETURN subtotal * 0.06;
END
        </function>
        <function name="myfunc" arguments="subtotal float" returns="float" dbms="firebird">
BEGIN
    ret = subtotal * 0.06;
END
        </function>
    </schema>
</before>
<after>
    <schema>
        <function name="myfunc" arguments="subtotal float" returns="float" dbms="postgres,mysql,oracle">
BEGIN
    RETURN subtotal * 0.07;
END
        </function>
        <function name="myfunc" arguments="subtotal float" returns="float" dbms="firebird">
BEGIN
    ret = subtotal * 0.07;
END
        </function>
    </schema>
</after>

<ddls dbms="postgres">
    <ddl>DROP FUNCTION myfunc(float)</ddl>
    <ddl>CREATE FUNCTION myfunc(subtotal float) RETURNS float AS '
BEGIN
    RETURN subtotal * 0.07;
END' LANGUAGE plpgsql</ddl>
</ddls>
<ddls dbms="postgres7" desc="Fails because I don't have PL/pgSQL installed">
</ddls>
<ddls dbms="mysql">
    <ddl>DROP FUNCTION myfunc</ddl>
    <ddl>CREATE FUNCTION myfunc(subtotal float) RETURNS float 
BEGIN
    RETURN subtotal * 0.07;
END</ddl>
</ddls>
<ddls dbms="firebird">
    <ddl>DROP PROCEDURE myfunc</ddl>
    <ddl>CREATE PROCEDURE myfunc(subtotal float) RETURNS (ret float) AS 
BEGIN
    ret = subtotal * 0.07;
END;</ddl>
</ddls>
</test>
