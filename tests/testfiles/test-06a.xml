<test title="Add, change defaults">
<before>
    <schema>
    <table name="table1">
        <columns>
            <column name="col1" type="decimal" size="15" default="0"/>
            <column name="col2" type="integer"/>
        </columns>
    </table>
    </schema>
</before>
<after>
    <schema>
    <table name="table1">
        <columns>
            <column name="col1" type="decimal" size="15" default="2"/>
            <column name="col2" type="integer" default="3"/>
        </columns>
    </table>
    </schema>
</after>
<ddls>
    <ddl>ALTER TABLE table1 ALTER col1 SET DEFAULT 2</ddl>
    <ddl>ALTER TABLE table1 ALTER col2 SET DEFAULT 3</ddl>
</ddls>
<ddls dbms="firebird">
    <ddl>ALTER TABLE table1 ALTER col1 TYPE decimal(15) DEFAULT 2</ddl>
    <ddl>ALTER TABLE table1 ALTER col2 TYPE integer DEFAULT 3</ddl>
</ddls>
</test>
