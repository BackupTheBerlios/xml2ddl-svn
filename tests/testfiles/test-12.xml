<?xml version="1.0" encoding="ISO-8859-1"?>
<test title="Change a column description">
<before>
    <schema>
    <table name="table1">
        <columns>
            <column name="col1" type="integer"/>
            <column name="col2" type="integer"/>
        </columns>
    </table>
    </schema>
</before>
<after>
    <schema>
    <table name="table1">
        <columns>
            <column name="col1" type="integer" desc="François's column"/>
            <column name="col2" type="integer"/>
        </columns>
    </table>
    </schema>
</after>
<ddls>
    <ddl>COMMENT ON COLUMN table1.col1 IS 'François''s column'</ddl>
</ddls>
<ddls dbms="mysql,mysql4">
    <ddl>ALTER TABLE table1 MODIFY col1 integer COMMENT 'François''s column'</ddl>
</ddls>
<ddls dbms="firebird">
    <ddl>UPDATE RDB$RELATION_FIELDS SET RDB$DESCRIPTION = 'François''s column' WHERE RDB$RELATION_NAME = upper('table1') AND RDB$FIELD_NAME = upper('col1')</ddl>
</ddls>
</test>
